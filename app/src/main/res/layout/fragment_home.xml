<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

             <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tổng quan"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="20dp"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp">

                    <Button
                        android:id="@+id/btnQlsach"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_marginRight="20dp"
                        android:drawableTop="@drawable/ic_bookcase"
                        android:text="Quản lý thể loại sách"
                        android:background="@drawable/radius"
                        />

                    <Button
                        android:id="@+id/btnQlphieumuon"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Quản lý phiếu mượn"
                        android:textColor="@color/black"
                        android:drawableTop="@drawable/ic_phieumuon"
                        app:backgroundTint="#E91E63"
                        android:background="@drawable/radius"
                        />
                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <Button
                    android:id="@+id/btnThanhvien"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Quản lý thành viên"
                    android:textColor="@color/black"
                    android:drawableTop="@drawable/ic_users"
                    app:backgroundTint="#FEF6F1"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/radius"
                    />

                <Button
                    android:id="@+id/btnThongke"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thống kê"
                    android:textColor="@color/black"
                    android:drawableTop="@drawable/ic_thongke"
                    app:backgroundTint="#F4F1FB"
                    android:background="@drawable/radius"
                    />
            </LinearLayout>
        </LinearLayout>
</LinearLayout>