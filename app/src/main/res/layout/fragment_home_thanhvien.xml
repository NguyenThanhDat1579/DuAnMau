<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center"
    android:background="@drawable/maunen">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="10dp">

             <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tổng quan"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="20dp"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp">

                    <Button
                        android:id="@+id/btnPhieuMuonTV"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/radius"
                        android:drawableTop="@drawable/ic_phieumuon"
                        android:text="Phiếu mượn của tôi"
                        android:textColor="@color/black"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        app:backgroundTint="#F5F2FC" />

                    <Button
                        android:id="@+id/btnQlLoaiSach"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/black"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:drawableTop="@drawable/ic_bookcase"
                        android:text="Các thể loại sách"
                        app:backgroundTint="#FFF9F2"
                        android:background="@drawable/radius"
                        />


                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <Button
                    android:id="@+id/btnDanhDau"

                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Sách đã đánh dấu"
                    android:textColor="@color/black"
                    android:drawableTop="@drawable/ic_favorite"
                    app:backgroundTint="#FCF2F2"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/radius"
                    />

                <Button
                    android:id="@+id/btnThongKe"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Thống kê"
                    android:textColor="@color/black"
                    android:drawableTop="@drawable/ic_thongke"
                    app:backgroundTint="#EFF2FC"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/radius"
                    />
            </LinearLayout>
        </LinearLayout>
</LinearLayout>