<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:background="@drawable/custom_btn_nentrangvienhong"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_thanhvien"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_thanhvien"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center"
            />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/txtMaTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Mã TV: 01"/>

            <TextView
                android:id="@+id/txtTenTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Tên TV: Phạm Thanh Toàn"/>

            <TextView
                android:id="@+id/txtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Email: toanptps37329@gamil.com"/>

            <TextView
                android:id="@+id/txtTenDangNhap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Tên đăng nhập: toanptps37329"/>

            <TextView
                android:id="@+id/txtMatkhau"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Mật khẩu: 123"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="right"
            android:gravity="right"
            android:weightSum="2">

            <ImageView
                android:id="@+id/ivSuaThanhVien"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_edit"
                android:layout_margin="10dp"
                android:scaleType="fitCenter">
            </ImageView>
            <ImageView
                android:id="@+id/ivXoaThanhVien"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:src="@drawable/ic_delete"
                android:scaleType="fitCenter">
            </ImageView>
        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>