<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thành viên"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginBottom="5dp"/>

    <Spinner
        android:id="@+id/spnThanhVien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên sách"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginBottom="5dp"/>

    <Spinner
        android:id="@+id/spnSach"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ngày Trả"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginBottom="5dp"/>

    <EditText
        android:id="@+id/edNgayTra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập ngày trả"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/btnHuy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hủy"
            android:background="@drawable/custom_btn_nentrangvienhong"
            app:backgroundTint="@null"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:textColor="#E25CE7"
            android:textAllCaps="true"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btnXacNhan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/custom_btn_nenhongvienhong"
            android:text="Xác nhận"
            android:textSize="16dp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            app:backgroundTint="@null" />



    </LinearLayout>




</LinearLayout>