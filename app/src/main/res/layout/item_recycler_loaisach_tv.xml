<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/main"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp"
    android:orientation="vertical"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="#FFF3B2"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_icon_loaisach"
            android:padding="15dp"
            android:gravity="center"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/ivHinhLoaiSach"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/ic_kinhte" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/txtMaLoai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mã loại: LS1"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/txtTenLoai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kinh tế"
                android:textStyle="bold"
                android:textSize="20dp" />

        </LinearLayout>



    </LinearLayout>
</androidx.cardview.widget.CardView>